<p id="notice"><%= notice %></p>

<h1>Candidates</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Title</th>
      <th>Youtube url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @candidates.each do |candidate| %>
      <tr>
        <td><%= candidate.name %></td>
        <td><%= candidate.age %></td>
        <td><%= candidate.title %></td>
        <td><%= candidate.youtube_url %></td>
        <td><%= link_to 'Show', [:admin, candidate] %></td>
        <td><%= link_to 'Edit', edit_admin_candidate_path(candidate) %></td>
        <td><%= link_to 'Destroy', [:admin, candidate], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

